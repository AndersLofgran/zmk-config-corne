#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define LOWER   1
#define RAISE   2
#define GAMING  3

/ {
behaviors {
   td0: game_147 {
      compatible = "zmk,behavior-tap-dance";
      label = "GAME_147";
      #binding-cells = <0>;
      tapping-term-ms = <1000>;
      bindings = <&kp KP_N1>, <&kp KP_N4>, <&kp KP_N7>;
   };
   td1: game_258 {
      compatible = "zmk,behavior-tap-dance";
      label = "GAME_258";
      #binding-cells = <0>;
      tapping-term-ms = <1000>;
      bindings = <&kp KP_N2>, <&kp KP_N5>, <&kp KP_N8>;
   };
   td2: game_369 {
      compatible = "zmk,behavior-tap-dance";
      label = "GAME_369";
      #binding-cells = <0>;
      tapping-term-ms = <1000>;
      bindings = <&kp KP_N3>, <&kp KP_N6>, <&kp KP_N9>;
   };
   td3: shift_caps {
      compatible = "zmk,behavior-tap-dance";
      label = "SHIFT_CAPS";
      #binding-cells = <0>;
      tapping-term-ms = <500>;
      bindings = <&kp LSHFT>, <&kp CAPS>;
   };
};

keymap {
compatible = "zmk,keymap";

default_layer {
// -----------------------------------------------------------------------------------------
// | TAB  |  Q  |  W  |  F  |  P  |  B  |   |  J  |  L   |  U  |  Y  |  '  | DEL |
// | ENTER|  A  |  R  |  S  |  T  |  G  |   |  M  |  N   |  E  |  I  |  O  | BKSP|
// | CTRL |  Z  |  X  |  C  |  D  |  V  |   |  K  |  H   |  ,  |  .  |  /  | ESC |
//                    | RALT| LWR | SHFT|   | SPC | RSE  | GUI |
//                                 /CAPS
bindings = <
   &kp TAB    &kp Q &kp W &kp F &kp P &kp B    &kp J &kp L &kp U     &kp Y   &kp SQT  &kp DEL
   &kp RETURN &kp A &kp R &kp S &kp T &kp G    &kp M &kp N &kp E     &kp I   &kp O    &kp BACKSPACE
   &kp LCTRL  &kp Z &kp X &kp C &kp D &kp V    &kp K &kp H &kp COMMA &kp DOT &kp FSLH &kp ESC
                        &kp RALT &mo 1 &td3    &kp SPACE &mo 2 &kp LGUI
>;
};

lower_layer {
// -----------------------------------------------------------------------------------------
// |      |     |  ^  |  &  |  *  |     |   |     |  `  |  ~  |  +  |  =  |      |
// |      |  !  |  @  |  #  |  $  |  %  |   |  -  |  (  |  )  |  {  |  }  |      |
// |      |     |     |     |     |     |   |  _  |  [  |  ]  | "|" |  \  |      |
//                    |     | HOLD|     |   |     |     |GAME |
bindings = <
   &trans &none    &kp CARET &kp AMPS &kp KP_MULTIPLY &none         &none     &kp GRAVE &kp TILDE &kp PLUS &kp EQUAL &trans
   &trans &kp EXCL &kp AT    &kp HASH &kp DLLR        &kp PRCNT     &kp MINUS &kp LPAR  &kp RPAR  &kp LBRC &kp RBRC  &trans
   &trans &none    &none     &none    &none           &none         &kp UNDER &kp LBKT  &kp RBKT  &kp PIPE &kp BSLH  &none
                             &none    &none           &none         &trans    &none    &tog 3
>;
};
                
raise_layer {
// -----------------------------------------------------------------------------------------
// |      | BT1 | BT2 | BT3 | BT4 | BT5 |   | PREV| NEXT| P/P | V_DN| V_UP |     |
// |      |  0  |  1  |  2  |  3  |  4  |   | HOME| LFT | RGT | DWN |  UP  |     |
// |      |  5  |  6  |  7  |  8  |  9  |   | END |     |     | B_DN| B_UP |     |
//                    |     |     |     |   |BTCLR| HOLD|     |
bindings = <
   &trans     &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp C_PREVIOUS &kp C_NEXT &kp C_PP  &kp C_VOL_DN &kp C_VOL_UP &trans
   &trans     &kp N0       &kp N1       &kp N2       &kp N3       &kp N4         &kp HOME       &kp LEFT   &kp RIGHT &kp DOWN     &kp UP       &trans
   &trans     &kp N5       &kp N6       &kp N7       &kp N8       &kp N9         &kp END        &none      &none     &kp C_BRI_DN &kp C_BRI_UP &none
                                        &trans       &none        &trans         &bt BT_CLR     &none      &none
>;
};

gaming_layer {
// -----------------------------------------------------------------------------------------
// |  X  | ESC  |  Q  |  W  |  E  |  R  |   |     |     |     |     |     |     |
// |  Y  | SHFT |  A  |  S  |  D  |  F  |   |     |     |     |     |     |     |
// |  Z  | CTRL |3/6/9|2/5/8|1/4/7|  V  |   |     |     |     |     |     |     |
//                    | GUI | TAB |SPACE|   |     |     |BASE |

bindings = <
   &kp X  &kp ESC    &kp Q    &kp W   &kp E &kp R    &none &none &none &none &none &none
   &kp Y  &kp LSHFT  &kp A    &kp S   &kp D &kp F    &none &none &none &none &none &none
   &kp Z  &kp LCTRL  &td2     &td1    &td0  &kp V    &none &none &none &none &none &none
                       &kp LGUI &kp TAB &kp SPACE    &none &none &tog 3
>;
};

};
};
